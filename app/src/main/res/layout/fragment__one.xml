<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment1_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_One">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_MessageOne"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:hint="Сообщение фрагмент 1" />

        <Button
            android:id="@+id/button_SendToFragmentTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send message" />

        <Button
            android:id="@+id/button_sendToActivityMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="send message to activity" />
    </LinearLayout>
</FrameLayout>